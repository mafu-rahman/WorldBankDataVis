package login;

public class xyz {

	public static void main(String[] args) {
		System.out.println(getS(4));

	}
		
	public static int getS(int n) {
		
		if(n==1) {
			return 1;
		}
		else if(n==2) {
			return 2;
		}
		
		int[][] ApowerN = matrixPower(n-2);
		int Tn = (2 * ApowerN[0][0]) + ApowerN[1][0];
		
		
		return Tn;
	}
	
	public static int[][] matrixPower(int n){
		int[][] A = {{2, 1}, 
				{3, 0}};
		
		int[][] P = new int[2][2];
		
		if(n==1) {
			return A;
		}
		
		else {
			P = matrixPower(n/2);
			if(n%2==0) {
				P[0][0] = P[0][0]*P[0][0] + P[0][1]*P[1][0];
				P[0][1] = P[0][0]*P[0][1] + P[0][1]*P[1][1];
				P[1][0] = P[1][0]*P[0][0] + P[1][1]*P[1][0];
				P[1][1] = P[1][0]*P[0][1] + P[1][1]*P[1][1];
				
				return P;
			}
			else {
				P[0][0] = P[0][0]*P[0][0] + P[0][1]*P[1][0];
				P[0][1] = P[0][0]*P[0][1] + P[0][1]*P[1][1];
				P[1][0] = P[1][0]*P[0][0] + P[1][1]*P[1][0];
				P[1][1] = P[1][0]*P[0][1] + P[1][1]*P[1][1];
				
				P[0][0] = P[0][0]*A[0][0] + P[0][1]*A[1][0];
				P[0][1] = P[0][0]*A[0][1] + P[0][1]*A[1][1];
				P[1][0] = P[1][0]*A[0][0] + P[1][1]*A[1][0];
				P[1][1] = P[1][0]*A[0][1] + P[1][1]*A[1][1];
				
				return P;
			}
		}
	}
}
